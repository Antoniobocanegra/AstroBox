<div class="row heading">
	<div class="small-12 title-heading">
		<h1 class="bold">{{astroboxName}}</h1>
	</div>
</div>

<div id="app-container" class="row">
	<div class="alert-box warning serial-log radius">
		{{ _('serialLogEnable') }}Your serial log is <b>enabled</b>. This will produce a large amount of data - <a href="#settings/software-advanced">{{ _('disableHere') }}Disable here</a>
	</div>
	{% if checkSoftware %}
		<div class="alert-box alert new-release radius hide">
			<i class="icon-download-cloud"></i> <b>{{ _('newSoftware') }}New software version</b> <span class="version-label"></span> {{ _('availableFor') }}is available for download - <a href="#" class="check button success radius">{{ _('moreInfo') }}More info</a>
			<a href="#" class="close">&times;</a>
		</div>
	{% endif %}
	<ul class="small-block-grid-3 large-block-grid-6">
		<li>
			<span class="upload-btn expand">
				<div class="app-image">
					<img src="/static/img/upload-icon.png" alt="file upload icon"/>
					<div class="overlay">
						<div class="contain"><h4 class="bold">{{ _('upload') }}Upload</h4></div>
						<input class="file-upload" type="file" name="file" data-url="/ajax/designs/upload" accept=".stl, .gcode, .gco">
					</div>
					<div class="progress">
						<span class="bold">0<i>%</i></span>
					</div>
					<div class="failed">
						<i class="icon-attention"></i>
					</div>
				</div>
			</span>
			<h1 class="bold">{{ _('fileUploader') }}File Uploader</h1>
		</li>

		<li>
			<a href="#files"><div class="app-image">
				<img src="/static/img/file-manager-icon.png" alt="file manager icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('launch') }}Launch</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('fileManager') }}File Manager</h1>
		</li>
		<li>
			<a href="#control"><div class="app-image">
				<img src="/static/img/control-icon.png" alt="control icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('launch') }}Launch</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('control') }}Control</h1>
		</li>
		{% if variantData['suppliesLink'] %}
		<li>
			<a href="{{variantData['suppliesLink']}}"><div class="app-image">
				<img src="/static/img/supplies-icon.png" alt="supplies icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('visit') }}Visit</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('supplies') }}Supplies</h1>
		</li>
		{% endif %}
		<li>
			<a href="#settings"><div class="app-image">
				<img src="/static/img/settings-icon.png" alt="settings icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('launch') }}Launch</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('settings') }}Settings</h1>
		</li>
		<li class="gcode-terminal-app-icon">
			<a href="#gcode-terminal"><div class="app-image">
				<img src="/static/img/gcode-terminal-icon.png" alt="settings icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('launch') }}Launch</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('gcTerminal') }}GCODE Terminal</h1>
		</li>
		<li>
			<a href="{{variantData['supportLink']}}"><div class="app-image">
				<img src="/static/img/support-icon.png" alt="support icon"/>
				<div class="overlay"><div class="contain"><h4 class="bold">{{ _('visit') }}Visit</h4></div></div></div>
			</a>
				<h1 class="bold">{{ _('support') }}Support</h1>
		</li>
	</ul>
</div>
