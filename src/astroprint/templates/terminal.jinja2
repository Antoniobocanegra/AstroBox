<div class="row">
	<div class="small-12 columns title-heading">
		<h1 class="bold">{{ _('gcodeTerminal') }}</h1>
	</div>

	<div class="small-12 columns">
		<div class="alert-box warning terminal radius">
			<i class="icon-attention"> </i> {{ _('gcodeTerminalWarning') }} - <a href="#">{{ _('hideWarningMsg') }}</a>
		</div>
	</div>

  <div class="small-12 columns">
    <div class="output-container"></div>
    <form>
      <div class="row collapse">
        <div class="small-8 large-9 columns">
          <input type="text" name="gcode" placeholder="{{ _('enterYourGcode') }}" autocomplete="off"/>
        </div>
        <div class="small-2 columns">
          <div class="loading-button expand">
            <button class="success tiny send bold">{{ _('send') }}</button>
            <span class="button success tiny disabled loading"><i class="icon-rocket-spinner animate-spin"></i> {{ _('sending') }}</span>
            <span class="button alert tiny disabled error"><i class="icon-attention"></i> {{ _('failed') }}</span>
          </div>
      	</div>
		  	<div class="small-2 large-1 columns">
			  	<div class="clear-button">
				  	<button class="secondary tiny clear bold">{{ _('clear') }}</button>
			  	</div>
				</div>
			</div>
  	</form>
  </div>
</div>
